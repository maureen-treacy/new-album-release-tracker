<!-- Navigation Bars -->
<div class="my-navbar">
  <a href="/saved-albums">My Saved Albums</a>
  <a href="/all-new-releases">Return to All Albums</a>
  <a href="/auth/logout">Logout</a>
</div>

<div class="container-2">
  <div class="row d-flex justify-content-center">
    {{#each savedAlbums}}

      <div class="col-3 mb-3">
        <div class="card pt-4 mb-4 mt-4 ml-4" style="width: 18rem;">

          <img class="specific-album-img" src={{this.images}} />
          <h1 class="specific-album-heading">{{this.albumTitle}}</h1>

          <form action="/album-details/{{this._id}}" method="get">
            {{! <button type="submit ">View Details</button> }}
            <button type="submit" class="btn btn-primary">View Details</button>
          </form>

          {{!-- <form action="/review-album/{{this._id}}" method="post">
           <button type="submit"  class="btn btn-primary">Review Album</button>
      </form> --}}

          <form action="/album-details/remove-album/{{this._id}}" method="post">
            <button type="submit" class="btn btn-primary">Remove Album</button>
          </form>
        </div>

      </div>
    {{/each}}
  </div>
</div>