<body class="review">
      <div class="my-navbar">
  <a href="/saved-albums">My Saved Albums</a>
  <a href="/all-new-releases">Return to All Albums</a>
  <a href="/auth/logout">Logout</a>
</div>
    
    <div style="height: 40px;"></div>

    <!-- Centered container -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card pt-4 mb-4 mt-2">
                <h2 class="text-center">Edit this Review:</h2>
                <form action="/review/{{review._id}}/edit" method="post">
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rate:</label>
                        <input type="number" class="form-control" id="rating" name="rating" min="1" max="10" value="{{review.rating}}">
                    </div>
                    <div class="mb-3">
                        <label for="review" class="form-label">Review:</label>
                        <textarea class="form-control" id="review" name="review" rows="4">{{review.review}}</textarea>
                    </div>
                    <div class="row justify-content-center"> <!-- Use row and justify-content-center classes -->
                        <div class="col-md-8 text-center"> <!-- Center the column -->
                            <button type="submit" class="btn btn-dark">Save changes</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
