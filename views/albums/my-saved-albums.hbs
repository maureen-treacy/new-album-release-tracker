<!-- Navigation Bars -->
<div class="my-navbar">
  <a href="/saved-albums">My Saved Albums</a>
  <a href="/all-new-releases">Return to All Albums</a>
  <a href="/auth/logout">Logout</a>
</div>

<div class="container-2">
  <div class="row d-flex justify-content-center">
    {{#each savedAlbums}}

      <div class="col-3 mb-3">
        <div class="card mx-auto mt-4 mb-4" style="width: 18rem;">

          <img class="specific-album-img" src={{this.images}} />
          <div
            class="card-body d-flex flex-column justify-content-between align-items-center"
          >
            <h4 class="specific-album-heading text-center">Album:
              {{this.albumTitle}}</h4>
            <h4 class="specific-album-heading text-center">Artist:
              {{this.artists}}</h4>

            <form action="/album-details/{{this._id}}" method="get">
              {{! <button type="submit ">View Details</button> }}
              <button type="submit" class="btn btn-dark">View Details</button>
            </form>
          
          {{!-- <form action="/review-album/{{this._id}}" method="post">
           <button type="submit"  class="btn btn-primary">Review Album</button>
      </form> --}}

          <form action="/album-details/remove-album/{{this._id}}" method="post">
            <button type="submit" class="btn btn-danger">Remove Album</button>
          </form>
          </div>
        </div>

      </div>
    {{/each}}
  </div>
</div>